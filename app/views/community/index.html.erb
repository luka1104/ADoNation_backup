<div class="posts-main posts-index">
  <div class="posts-container">
    <% @posts.each do |post| %>
      <div class="posts-index-item">
        <div class="post-left">
          <img src="<%= "/user_images/#{post.user.image_name}" %>">
        </div>
        <div class="post-right">
          <div class="post-user-name">
            <%= link_to(post.user.name, "/community/users/#{post.user.id}") %>
          </div>
          <%= link_to(post.content, "/community/#{post.id}") %>
        </div>
      </div>
    <% end %>
    <div class="post-create" id="post-new-modal">
        <p>新規投稿</p>
    </div>
    <div class="post-new-modal" id="post-input-modal">
        <%= form_tag("/community/create") do %>
            <div class="form">
                <i id="modal-cancel" class="fa fa-2x fa-times"></i>
                <div class="form-body">
                <textarea name="content"><%= @post.content %></textarea>
                <input type="submit" value="投稿">
                </div>
            </div>
        <% end %>
    </div>
  </div>
</div>


      