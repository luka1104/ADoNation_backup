<body>   
    <main>
        <div class="donate-project-container">
            <div class="donate-project-show-item">
                <div class="align-center">
                    <div>
                        <p>
                            <%= @donate.title %>
                        </p>
                    </div>
                    <div class="donate-image">
                        <img src="<%= "/donate_images/#{@donate.donate_image}" %>">
                    </div>
                    <div> 
                        <p>
                            <%= @donate.body %>
                        </p>
                    </div>
                    <div class="donate-project-time">
                        <%= @donate.created_at %>
                </div>
                </div>
                <div class="mainbody">
                    <%= @donate.mainbody %>
                </div>
            </div>
        </div>
        <div class="edit-footer">
            <div class="footer-btn">
                <%= link_to("編集に戻る","/donate/#{@donate.id}/edit", {class: "edit-btn preview-btn"}) %>
            </div>
        </div>
    </main>
</body>
